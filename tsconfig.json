{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "rootDir": "./app",
    "experimentalDecorators": true,
    "lib": ["dom", "es2015"]
  },
  "extends": "tslint-react",
  "linterOptions": {
    "exclude": ["config/**/*.js", "node_modules/**/*.ts"]
  },
  "rules": {
    "object-literal-sort-keys": false,
    "member-ordering": false,
    "jsx-no-lambda": false,
    "no-console": false,
    "ordered-imports": false
  }
}
